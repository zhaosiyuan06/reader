.post-container{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  padding-bottom: 5px;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
}
.post-author{
  margin:10rpx 0 20rpx 10px;
}
.post-author-icon{
  width:60rpx;
  height: 60rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}
.post-author-date{
  vertical-align: middle;
  font-size: 26rpx;
  color:#333; 
  margin-left: 20rpx;
  margin-bottom: 5rpx;
}
.post-item{
  font-size: 34rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 10px;
  margin-left: 10px;
}
.post-image{
  width: 100%;
  height: 340rpx;
  margin-bottom: 15px;
  margin-left: 16px;
  margin: auto 0;
}
.post-content{
  color:#666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}
.post-like{
  font-size: 13px;
  flex-direction: row;
  line-height: 16rpx;
  margin-left: 10px;
}
.post-like-image{
  height: 16px;
  width: 16px;
  margin-right: 8rpx;
  vertical-align: middle;
}
.post-like-content{
  vertical-align: middle;
  margin-right: 20px;
}
